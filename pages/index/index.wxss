/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.flag-item {
  margin: 20rpx;
  color: red;
  padding: 10rpx;
  border-width: 4rpx;  
  border-color: blue;
  border-style: solid;
  border-radius: 50%;
}

.flag-frame {
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height:100%;
}

.user-title {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height:100%;
  color: blue;
}